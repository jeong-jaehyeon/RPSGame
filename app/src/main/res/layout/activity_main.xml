<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hand_animation"
        android:scaleType="fitCenter"
        android:id="@+id/hand_animation_image"
        />

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@drawable/com_gawe"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:id="@+id/hand_animation_view"-->
            <!--/>-->

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="100"

        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_gawe"
            android:scaleType="fitCenter"
            android:backgroundTint="#9FCC92"
            android:id="@+id/gaweButton"
            android:onClick="button_click"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_bawe"
            android:scaleType="fitCenter"
            android:backgroundTint="#9FCC92"
            android:id="@+id/baweButton"
            android:onClick="button_click"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/com_bo"
            android:scaleType="fitCenter"
            android:backgroundTint="#9FCC92"
            android:id="@+id/boButton"
            android:onClick="button_click"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:src="@drawable/ic_replay_blackgreen_24dp"
            android:scaleType="fitCenter"
            android:backgroundTint="#9FCC92"
            android:id="@+id/reButton"
            android:onClick="button_click"/>

    </LinearLayout>

</LinearLayout>